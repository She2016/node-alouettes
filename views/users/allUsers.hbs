<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header d-flex justify-content-between">
            <h2 class="card-title">All Users</h2>
            <a href="/users/create" class="pull-right"><img src="/images/add.png" width="50" height="50" alt="Add an event"></a>
          </div>
          <div class="card-body">
            {{#if success_messages}}
            <div class="alert alert-success" role="alert" id="errorMessage">{{success_messages}}</div>
            {{/if}}
            {{#if error_messages}}
            <div class="alert alert-danger" role="alert" id="errorMessage">{{error_messages}}</div>
            {{/if}}
            <table class="table table-striped table-bordered" id="bootstrap-data-table">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                  <th>Type</th>
                  <th>Actions</th>
                </tr>
              </thead>
              <tbody>
                {{#each jsonData}}
                <tr>
                  <td>{{name}}</td>
                  <td>{{email}}</td>
                  <td>{{type}}</td>
                  <td>
                    <div class="d-flex justify-content-around">
                      <div><a href='/users/edit/{{id}}'><i class="fa fa-edit"></i></a></div>
                      <div><a href='/users/delete/{{id}}' onclick="return confirm('Are you sure you want to delete this item?');"><i
                            class="fa fa-trash"></i></a></div>
                    </div>

                  </td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>